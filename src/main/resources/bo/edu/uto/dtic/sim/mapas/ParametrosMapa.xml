<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bo.edu.uto.dtic.pgcontrol.mapas.ParametrosMapa">

	<select id="getFacultades" resultType="Facultad">
		select *
			from public.facultades
		;
	</select>

	<select id="getUnidades" resultType="Unidad" parameterType="String">
		select *
			from public.unidades u
		where
			u.id_facultad = #{ id_facultad }
		order by u.unidad
		;
	</select>
</mapper>
